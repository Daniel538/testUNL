
  <div class="row align-items-center">
      <div class="col-md-4">
        <h1 class="display-4 pt-2"><em>All projects</em></h1>
      </div>
      <div class="col-md-8">
        <%= link_to 'New Project', new_project_path, class: 'btn btn-info btn-lg float-right', role:'button' %>
      </div>
    </div>
    <hr>
    <%= paginate @projects %>
    <div class="row">
      <% @projects.each do |project| %>
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
          <div class="card-body">
            <p class="text-center"><b>Name: </b><%= project.name %></p>
            <p class="text-center"><b>Summary: </b><%= project.summary %></p>
            <p class="text-center"><b>Date: </b><%= project.start_date %> - <%= project.end_date %></p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <%= link_to 'View', project_url(project), class: 'btn btn-sm btn-outline-secondary'%>
                <%= link_to 'Delete', project_url(project), method: :delete, class: 'btn btn-sm btn-outline-secondary', data: {confirm: 'delete it?'} %>
              </div>
              <small class="text-muted">Show peoples</small>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
