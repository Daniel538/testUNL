<%= form_for @project do |f| %>
  <% if @project.errors.any? %>
    <% @project.errors.full_messages.each do |msg| %>
      <div class="alert alert-danger"><%= msg %></div>
    <% end %>
  <% end %>
  <div class="form-group row">
    <label for="name" class="col-sm-2 col-form-label">Name</label>
    <div class="col-sm-10">
      <%= f.text_field(:name, {class: 'form-control', id: 'name'}) %>
    </div>
  </div>
  <div class="form-group row">
    <label for="summary" class="col-sm-2 col-form-label">Summary</label>
    <div class="col-sm-10">
      <%= f.text_area(:summary, {class: 'form-control', id: 'summary'}) %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label" class="col-sm-2 col-form-label">Start date</label>
    <div class="col-sm-10">
      <%= f.date_select(:start_date, {class: 'form-control', id:  'start_date'}) %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label" class="col-sm-2 col-form-label">End date</label>
    <div class="col-sm-10">
      <%= f.date_select(:end_date, {class: 'form-control'}) %>
    </div>
  </div>
  <div class="form-group col-md-12">
    <%= f.submit({class: 'btn btn-success btn-block btn-lg'}) %>
  </div>
<% end %>