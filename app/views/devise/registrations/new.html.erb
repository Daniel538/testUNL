<div class="col-md-6 offset-md-3">
  <h2>Sign up</h2>
  <hr>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form-group">
      <%= f.label :first_name, for: 'inputFirstName' %><br />
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name",
                        class: "form-control", id: "inputFirstName",
                        placeholder: "Enter your name"%>
    </div>

    <div class="form-group">
      <%= f.label :last_name, for: 'inputLastName' %><br />
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name",
                        class: "form-control", id: "inputLastName",
                        placeholder: "Enter your last name"%>
    </div>

    <div class="form-group">
      <%= f.label :email, for: 'inputEmail' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
                        class: "form-control", id: "inputEmail",
                        placeholder: "Enter email"%>
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>

    <div class="form-group">
      <%= f.label :password, for: 'inputConfirmPassword' %><br />
      <%= f.password_field :password, autocomplete: "new-password",
                           class: "form-control", id: "inputConfirmPassword",
                           placeholder:"Password"%>
    </div>

    <div class="form-group">
      <%= f.label :password, for: 'inputPassword' %><br />
      <%= f.password_field :password, autocomplete: "new-password",
                           class: "form-control", id: "inputPassword",
                           placeholder:"Password"%>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-check">
        <%= f.check_box :remember_me, class: "form-check-input", id: "check" %>
        <%= f.label :remember_me, class: "form-check-label", for: "check" %>
      </div>
    <% end %>
    <div class="form-group text-center">
      <%= f.submit "Sign up", class: "btn btn-primary" %>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>
